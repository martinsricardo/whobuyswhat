<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    <title>Hello, world!</title>
</head>

<body style="font-family: 'Lato', sans-serif;">


    <h1>
        <%= title %>
    </h1>

    <form action="/" method="POST">
        <input type="text" name="newItem" placeholder="Item">
        <input type="text" name="buyer" placeholder="Persons">
        <button type="submit" class="btn btn-success">Send</button>
    </form>
    <div style="display:inline-block; align-items: center; border:1px solid black;">
        <% for(var i=0; i<list.length ; i++) { %>
            <div style="display:flex; align-items: center;">
                <%= list[i].item +" -> "+ list[i].buyer %>     
                    <form action="/" method="POST">
                       
                            <button name="delete" type="submit" value=<%=i %>> Delete</button>                        
                    </form>
            </div>
            <% } %>
    </div>
    </div>
</body>

</html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Hello, world!</title>
</head>

<body>


    <h1>
        <%= title %>
    </h1>

    <form action="/" method="POST">
        <input type="text" name="newItem" placeholder="Item">
        <input type="text" name="buyer" placeholder="Persons">
        <button type="submit" class="btn btn-success">Send</button>
    </form>

    <% for(var i=0; i<list.length ; i++) { %>
        <div style="display:flex; align-items: center; border:1px solid black;">
            <div style="margin:5px;">
                <%= list[i].item +" -> "+ list[i].buyer %>
            </div>
            <div style="margin:5px;">
                <form action="/" method="POST">
                    <p>
                        <button name="delete" type="submit" value=<%=i %>> Delete</button>
                    </p>
                </form>
                <% } %>
            </div>
        </div>
</body>

</html>